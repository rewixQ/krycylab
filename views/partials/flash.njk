{% if flash %}
  <div class="space-y-2 mb-4">
    {% for type, messages in flash %}
      {% for message in messages %}
        <div class="rounded border px-4 py-2
          {% if type == 'error' %}border-red-500 bg-red-500/10
          {% elseif type == 'success' %}border-emerald-500 bg-emerald-500/10
          {% else %}border-slate-700 bg-slate-800{% endif %}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
  </div>
{% endif %}


{% extends "layout.njk" %}

{% block content %}
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">Cats</h1>
    {% if currentUser and currentUser.roleName in ["admin", "superadmin"] %}
      <a href="/cats/new" class="rounded bg-emerald-500 px-3 py-2 text-sm font-semibold text-slate-900">
        Add Cat
      </a>
    {% endif %}
  </div>

  <form method="get" class="mb-4">
    <input type="text" name="search" value="{{ query.search | default('') }}" placeholder="Search by name or breed"
      class="w-full rounded border border-slate-800 bg-slate-950 px-3 py-2" />
  </form>

  <div class="overflow-x-auto rounded border border-slate-800">
    <table class="min-w-full text-sm">
      <thead class="bg-slate-900 text-slate-400">
        <tr>
          <th class="px-3 py-2 text-left">Name</th>
          <th class="px-3 py-2 text-left">Breed</th>
          <th class="px-3 py-2 text-left">Caretaker</th>
          <th class="px-3 py-2 text-left">Updated</th>
          <th class="px-3 py-2"></th>
        </tr>
      </thead>
      <tbody>
        {% for cat in cats %}
          <tr class="border-t border-slate-900">
            <td class="px-3 py-2">{{ cat.name }}</td>
            <td class="px-3 py-2 text-slate-400">{{ cat.breed or "â€”" }}</td>
            <td class="px-3 py-2 text-slate-400">{{ cat.caretaker?.username or "Unassigned" }}</td>
            <td class="px-3 py-2 text-slate-500">{{ cat.updatedAt | date("YYYY-MM-DD") }}</td>
            <td class="px-3 py-2 text-right">
              <a href="/cats/{{ cat.id }}" class="text-emerald-300 hover:text-emerald-200">View</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td class="px-3 py-4 text-center text-slate-500" colspan="5">No cats found.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}


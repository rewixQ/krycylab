{% extends "layout.njk" %}

{% block content %}
  <div class="max-w-2xl mx-auto rounded border border-slate-800 bg-slate-900/70 p-6">
    <h1 class="text-2xl font-semibold mb-4">{% if cat %}Edit{% else %}Create{% endif %} Cat</h1>
    <form method="post" action="/cats{% if cat %}/{{ cat.id }}{% endif %}" class="space-y-4">
      <label class="block text-sm">
        <span>Name</span>
        <input type="text" name="name" value="{{ cat.name if cat else '' }}" required class="mt-1 w-full rounded border border-slate-800 bg-slate-950 px-3 py-2" />
      </label>
      <label class="block text-sm">
        <span>Breed</span>
        <input type="text" name="breed" value="{{ cat.breed if cat else '' }}" class="mt-1 w-full rounded border border-slate-800 bg-slate-950 px-3 py-2" />
      </label>
      <label class="block text-sm">
        <span>Birth Date</span>
        <input type="date" name="birthDate" value="{{ cat.birthDate | date('YYYY-MM-DD') if cat and cat.birthDate else '' }}" class="mt-1 w-full rounded border border-slate-800 bg-slate-950 px-3 py-2" />
      </label>
      <label class="block text-sm">
        <span>Friends</span>
        <input type="text" name="friends" value="{{ cat.friends if cat else '' }}" class="mt-1 w-full rounded border border-slate-800 bg-slate-950 px-3 py-2" />
      </label>
      <button class="rounded bg-emerald-500 px-4 py-2 font-semibold text-slate-900">
        Save
      </button>
    </form>
  </div>
{% endblock %}

